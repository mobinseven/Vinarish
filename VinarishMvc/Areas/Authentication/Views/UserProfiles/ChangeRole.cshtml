@model VinarishMvc.Areas.Authentication.Controllers.UserProfilesController.UserRoleViewModel

@{
    ViewData["Title"] = Expressions.AccessesOf + @Model.Profile.LastName;
}
<h4>@ViewData["Title"]</h4>
<form asp-action="ChangeRole">
    <input type="hidden" asp-for="VinarishUserId" />
    <div class="form-group">
        @foreach (var item in Model.RoleList)
        {
            <div class="form-check">
                <input type="checkbox" asp-for="@Model.RoleList[item.Key]" />
                <label asp-for="@Model.RoleList[item.Key]">@item.Key</label>
            </div>
        }
    </div>

    <div class="form-group">
        <input type="submit" value="@Expressions.Edit" class="btn btn-primary" />
    </div>
</form>