
<ejs-grid id="Grid" width="auto" dir="ltr" allowResizing="true" dataBound="dataBound">
    <e-grid-pageSettings></e-grid-pageSettings>
    <e-data-manager url="api/User" adaptor="WebApiAdaptor"></e-data-manager>
    <e-grid-columns>
        <e-grid-column field="userProfileId" headerText="ID" visible="false"></e-grid-column>
        <e-grid-column field="email" headerText="Email" textAlign="Left" width="170"></e-grid-column>
        <e-grid-column field="firstName" headerText="First Name" width="150"></e-grid-column>
        <e-grid-column field="lastName" headerText="Last Name" textAlign="Left" width="150"></e-grid-column>
    </e-grid-columns>
</ejs-grid>
<script>
    function dataBound(args) {
        this.autoFitColumns(['email', 'firstName', 'lastName']);
    }
</script>