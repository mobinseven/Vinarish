@{
    ViewData["Title"] = "خانه";
}
@using VinarishMvc.Areas.Identity.Models

@using Microsoft.AspNetCore.Identity
@inject SignInManager<VinarishUser> SignInManager
<div class="text-center">
    <img src="~/img/ویناریش.png" width="150" />
    <h1>ویناریش</h1>
    <h4>سامانه‌ی نگهداری و بازسازی سازوبرگ راه‌آهن</h4>
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="card-group align-middle">
            <div class="card text-center mr-1 rounded-lg">
                <div class="card-body">
                    <a asp-area="Authentication" asp-controller="UserProfiles" asp-action="Index" class="btn btn-outline-dark btn-lg btn-block">کاربران</a>
                    <a asp-page="~/Departments/Index" class="btn btn-outline-dark btn-lg btn-block" role="button">بخش‌ها</a>
                    <a asp-action="Index" asp-controller="DeviceTypes" class="btn btn-outline-dark btn-lg btn-block" role="button">دستگاه‌ها</a>
                    <a asp-action="~/Trains/Index" asp-controller="Trains" class="btn btn-outline-dark btn-lg btn-block" role="button">رام</a>
                    <a asp-action="Index" asp-controller="Wagons" class="btn btn-outline-dark btn-lg btn-block" role="button">واگن</a>
                    <a asp-action="Index" asp-controller="TrainTrips" class="btn btn-outline-dark btn-lg btn-block" role="button">سفر‌ها</a>
                </div>
            </div>
        </div>
    }
    <p>contact@@vinarish.com</p>

</div>