@{
    ViewData["Title"] = "خانه";
}
@using VinarishMvc.Areas.Identity.Models

@using Microsoft.AspNetCore.Identity
@inject SignInManager<VinarishUser> SignInManager
<div class="text-center">
    <img src="~/img/ویناریش.png" width="150" />
    <h1>ویناریش</h1>
    <h4>سامانه‌ی نگهداری و بازسازی سازوبرگ راه‌آهن</h4>
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="card-group align-middle">
            <div class="card text-center mr-1 rounded-lg">
                <div class="card-body">
                    <h5 class="card-title">سازماندهی</h5>
                    <a asp-action="IndexSync" asp-controller="Departments" class="btn btn-outline-dark btn-lg btn-block" role="button">بخش‌ها</a>
                    <a asp-action="IndexSync" asp-controller="Trains" class="btn btn-outline-dark btn-lg btn-block" role="button">رام</a>
                    <a asp-action="IndexSync" asp-controller="Wagons" class="btn btn-outline-dark btn-lg btn-block" role="button">واگن</a>
                    <div class="btn-group-vertical btn-block" role="group">
                        <span data-target="#menu-device" class="btn btn-outline-dark btn-lg btn-block" data-toggle="collapse">
                            دستگاه
                        </span>
                        <div class="collapse btn-group-vertical btn-block" role="group" id="menu-device">

                            <a asp-action="Index" asp-controller="DeviceTypes" class="btn btn-secondary btn-lg btn-block" role="button">گروه</a>
                            <a asp-action="Index" asp-controller="DevicePlaces" class="btn btn-secondary btn-lg btn-block" role="button">دستگاه</a>
                            <a asp-action="Index" asp-controller="DeviceStatus" class="btn btn-secondary btn-lg btn-block" role="button">کد وضعیت</a>

                        </div>
                    </div>
                    <a asp-area="Authentication" asp-controller="UserProfiles" asp-action="Index" class="btn btn-outline-dark btn-lg btn-block">کاربران</a>
                </div>
            </div>
        </div>
    }
    <p>contact@@vinarish.com</p>

</div>