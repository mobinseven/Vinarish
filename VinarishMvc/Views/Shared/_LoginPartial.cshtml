@using Microsoft.AspNetCore.Identity
@using VinarishMvc.Areas.Identity.Models
@inject SignInManager<VinarishUser> SignInManager
@inject UserManager<VinarishUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">کاربر: @User.Identity.Name</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-danger text-light">پایان</button>
        </form>
    </li>
}
else
{
    @*<li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>*@
    <li class="nav-item">
        <a class="btn btn-primary" role="button" asp-area="Identity" asp-page="/Account/Login">آغاز</a>
    </li>
}
</ul>