@model IEnumerable<VinarishMvc.Models.DeviceType>

@{
    ViewData["Title"] = "گروه‌های دستگاه‌ها";
}

    <h1>@ViewData["Title"]</h1>

    <p>
        <a asp-action="Create"><i class="fa fa-plus-square fa-lg m-2"></i></a>
        <a asp-action="Upload"><i class="fa fa-upload fa-lg m-2"></i></a>
        <a asp-action="Download"><i class="fa fa-download fa-lg m-2"></i></a>
    </p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DeviceTypeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DeviceTypeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DeviceTypeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
