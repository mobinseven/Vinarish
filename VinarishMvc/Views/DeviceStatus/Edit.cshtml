@model VinarishMvc.Models.DeviceStatus

@{
    ViewData["Title"] = "ویرایش " + Expressions.DeviceStatus;
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StatusId" />
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeviceStatusType" class="control-label"></label>
                <input asp-for="DeviceStatusType" class="form-control" />
                <span asp-validation-for="DeviceStatusType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeviceTypeId" class="control-label"></label>
                <select asp-for="DeviceTypeId" class="form-control" asp-items="ViewBag.DeviceTypeId"></select>
                <span asp-validation-for="DeviceTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ویرایش" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">بازگشت به فهرست</a>
</div>

