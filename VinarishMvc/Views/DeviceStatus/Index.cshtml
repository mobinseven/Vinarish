@model IEnumerable<VinarishMvc.Models.DeviceStatus>

@{
    ViewData["Title"] = Expressions.DeviceStatus;
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create"><i class="fa fa-plus-square fa-lg m-2"></i></a>
    <a asp-action="Upload"><i class="fa fa-upload fa-lg m-2"></i></a>
    <a asp-action="Download"><i class="fa fa-download fa-lg m-2"></i></a>
</p>
<nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
        <a class="nav-item nav-link active" id="nav-mal-tab" data-toggle="tab" href="#nav-mal" role="tab">@Expressions.DeviceStatusMalfunction</a>
        <a class="nav-item nav-link" id="nav-rep-tab" data-toggle="tab" href="#nav-rep" role="tab">@Expressions.DeviceStatusRepair</a>
        <a class="nav-item nav-link" id="nav-notrep-tab" data-toggle="tab" href="#nav-notrep" role="tab">@Expressions.DeviceStatusNRepair</a>
    </div>
</nav>
<div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-mal" role="tabpanel">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Code)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Text)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DeviceType)
                    </th>
                    <th>@Expressions.Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    @if (item.DeviceStatusType == DeviceStatusType.Malfunction)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Text)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DeviceType.Name)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.StatusId"><i class="fa fa-edit fa-lg m-3"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.StatusId"><i class="fa fa-trash fa-lg m-3"></i></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>
    <div class="tab-pane fade" id="nav-rep" role="tabpanel">
        <table class="table table-sm" style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Code)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Text)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DeviceType)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    @if (item.DeviceStatusType == DeviceStatusType.Repair)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Text)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DeviceType.Name)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.StatusId"><i class="fa fa-edit fa-lg m-3"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.StatusId"><i class="fa fa-trash fa-lg m-3"></i></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="tab-pane fade" id="nav-notrep" role="tabpanel">
        <table class="table table-sm" style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Code)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Text)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    @if (item.DeviceStatusType == DeviceStatusType.Unrepairable)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Text)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.StatusId"><i class="fa fa-edit fa-lg m-3"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.StatusId"><i class="fa fa-trash fa-lg m-3"></i></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
