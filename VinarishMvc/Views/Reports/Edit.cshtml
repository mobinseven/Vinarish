@model VinarishMvc.Models.Report

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Report</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReportId" />
            <div class="form-group">
                <label asp-for="DateTimeCreated" class="control-label"></label>
                <input asp-for="DateTimeCreated" class="form-control" readonly/>
                @*<span asp-validation-for="DateTimeCreated" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="ReporterId" class="control-label"></label>
                <select asp-for="ReporterId" class="form-control" asp-items="ViewBag.ReporterId"></select>
                <span asp-validation-for="ReporterId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeviceStatusId" class="control-label"></label>
                <select asp-for="DeviceStatusId" class="form-control" asp-items="ViewBag.DeviceStatusId"></select>
                <span asp-validation-for="DeviceStatusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParentReportId" class="control-label"></label>
                <select asp-for="ParentReportId" class="form-control" asp-items="ViewBag.ParentReportId"></select>
                <span asp-validation-for="ParentReportId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DevicePlaceId" class="control-label"></label>
                <select asp-for="DevicePlaceId" class="form-control" asp-items="ViewBag.DevicePlaceId"></select>
                <span asp-validation-for="DevicePlaceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WagonId" class="control-label"></label>
                <select asp-for="WagonId" class="form-control" asp-items="ViewBag.WagonId"></select>
                <span asp-validation-for="WagonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-save fa-lg"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><i class="fa fa-undo fa-lg m-2"></i></a>
</div>

