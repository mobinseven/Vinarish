@model IEnumerable<VinarishMvc.Models.Report>

@{
    ViewData["Title"] = "فهرست گزارش‌ها";
}

<h1>فهرست گزارش‌ها</h1>

<p>
    <a asp-action="Create" class="btn btn-success" role="button">افزودن</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsValid)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AppendixReport)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cat)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Place)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Reporter)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Wagon)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.DateTime)
                            @* // TODO: Show date and time in persian *@
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.IsValid)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.AppendixReport.Id)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Cat.CategoryName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Code.Code)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Place.Code)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Reporter.LastName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Wagon.WagonId)
                        </td>
                        <td class="align-middle">
                            <div dir="ltr" class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary" role="button">ویرایش</a>
                                <a asp-action="Append" asp-route-id="@item.Id" class="btn btn-outline-success" role="button">افزودن پیوست</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary stretched-link" role="button">جزئیات</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" role="button">پاک کردن</a>
                            </div>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>
