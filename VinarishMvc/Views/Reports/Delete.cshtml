@model VinarishMvc.Models.Report

@{
    ViewData["Title"] = Expressions.DeleteItemTitle(Expressions.Report);
}

<h3>@Expressions.DeleteItemAsk(Expressions.Report)</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateTimeCreated)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTimeCreated)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateTimeModified)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTimeModified)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Reporter)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Reporter.VinarishUserId)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DeviceStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DeviceStatus.Code)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ParentReport)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ParentReport.ReportId)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DevicePlace)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DevicePlace.Code)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Wagon)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Wagon.Name)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ReportId" />
        <input type="submit" value="@Expressions.Delete" class="btn btn-danger" /> |
        <a asp-action="Index">@Expressions.BackToIndex</a>
    </form>
</div>
