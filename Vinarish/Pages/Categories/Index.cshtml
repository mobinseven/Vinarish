@model Vinarish.Pages.Categories.IndexModel

<h4>Category</h4>
<p>
    <a asp-page="Create">افزودن</a>
</p>
<table class="table">
    <thead>
        <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Category[0].CategoryName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Category[0].Department)
                    </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Category) {
        <tr>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Department.Name)
                    </td>
                <td class="align-middle">
                    <a asp-page="./Edit" asp-route-id="@item.Id">ویرایش</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">جزئیات</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">پاک کردن</a>
                </td>
        </tr>
        }
    </tbody>
</table>
