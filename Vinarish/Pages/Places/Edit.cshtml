<h4>Place</h4>
<hr />
<div class="row">
    <div class="col-md-3">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Place.Id" />
            <div class="form-group">
                <label asp-for="Place.Code" class="control-label"></label>
                <input asp-for="Place.Code" class="form-control" />
                <span asp-validation-for="Place.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Place.Text" class="control-label"></label>
                <input asp-for="Place.Text" class="form-control" />
                <span asp-validation-for="Place.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
