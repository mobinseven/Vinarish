    <div class="col-md-3">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Report.Id" />
            <div class="form-group">
                <label asp-for="Report.WagonId" class="control-label"></label>
                <select asp-for="Report.WagonId" class="form-control" asp-items="ViewBag.WagonId"></select>
                <span asp-validation-for="Report.WagonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Report.CatId" class="control-label"></label>
                <select asp-for="Report.CatId" class="form-control" asp-items="ViewBag.CatId"></select>
                <span asp-validation-for="Report.CatId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Report.CodeId" class="control-label"></label>
                <select asp-for="Report.CodeId" class="form-control" asp-items="ViewBag.CodeId"></select>
                <span asp-validation-for="Report.CodeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Report.PlaceId" class="control-label"></label>
                <select asp-for="Report.PlaceId" class="form-control" asp-items="ViewBag.PlaceId"></select>
                <span asp-validation-for="Report.PlaceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Report.DateTime" class="control-label"></label>
                <input asp-for="Report.DateTime" class="form-control" />
                <span asp-validation-for="Report.DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Report.ReporterId" class="control-label"></label>
                <select asp-for="Report.ReporterId" class="form-control" asp-items="ViewBag.ReporterId"></select>
